<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txt_tinh"
        android:text="0"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/txt_result"
        android:layout_margin="16dp"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_result"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#9FBCB9"
        android:paddingVertical="16dp"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="C"
                android:id="@+id/button_c"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:backgroundTint="#E91E43"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="("
                android:id="@+id/button_mo_ngoac"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text=")"
                android:id="@+id/button_dong_ngoac"
                android:textSize="32dp"
                android:backgroundTint="#4CAF50"

                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="/"
                android:id="@+id/button_chia"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                android:backgroundTint="#2196F3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:id="@+id/button_7"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:id="@+id/button_8"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:id="@+id/button_9"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:id="@+id/button_nhan"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                android:backgroundTint="#2196F3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:id="@+id/button_4"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:id="@+id/button_5"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:id="@+id/button_6"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:id="@+id/button_cong"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                android:backgroundTint="#2196F3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:id="@+id/button_1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:id="@+id/button_2"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:id="@+id/button_3"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:id="@+id/button_tru"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                android:backgroundTint="#2196F3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:id="@+id/button_ac"
                android:backgroundTint="#E91E43"

                android:textSize="20dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:id="@+id/button_0"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:id="@+id/button_dot"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:id="@+id/button_bang"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="36dp"
                android:backgroundTint="#2196F3"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

